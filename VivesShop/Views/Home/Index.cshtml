@using VivesShop.Controllers
@model OrderModel
@{
    ViewData["Title"] = "Bestelling";
}


<div class="table-responsive">
    <div style='float: left;' class="table-bordered">
        <h1>Arikelen</h1>
        <table class="table-bordered">
            <thead>
                <tr>

                    <td>Artikel</td>
                    <td>Soort</td>
                    <td>Prijs</td>
                    <td>Toevoegen</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model.MenuItems)
                {
                    <partial name="ItemPartial" model="items" />
                }
            </tbody>
        </table>
    </div>
    <div style='float:right;' class="table-bordered">
        <h1>Bestelling</h1>
        <table class="table-bordered">
            <thead>
                <tr>

                    <td>Artikel</td>
                    <td>Soort</td>
                    <td>Prijs</td>
                    <td>Verwijderen</td>
                </tr>
            </thead>
            <tbody>

                @foreach (var beingordered in Model.BeingOrdered)
                {
                    <partial name="OrderPartial" model="beingordered" />

                }
            </tbody>
        </table>
        @*<partial name="testpartial" model="Model.dTotaalPrijs"/>*@


        <a class="btn btn-info" asp-area="" asp-controller="Order" asp-action="Index">Order</a>

    </div>
</div>